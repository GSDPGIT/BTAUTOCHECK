{
    "github_username": "your_github_username",
    "github_repo": "bt-panel-files",
    "github_token": "",
    "check_interval_hours": 24,
    "bt_api_url": "https://api.bt.sb/api/panel/get_version",
    "bt_download_base": "http://io.bt.sb/install/update",
    "current_version": "11.2.0",
    "notification_enabled": true,
    "auto_upload": false,
    "security_threshold": 80,
    "scheduler": {
        "enabled": true,
        "interval_hours": 1,
        "comment": "自动检测调度器，默认每小时检测一次。设为0禁用自动检测。"
    },
    "backup_enabled": true,
    "backup_before_upgrade": true,
    "auto_rollback_on_failure": true,
    "keep_backups": 5,
    "ai_providers": {
        "enabled": false,
        "primary_provider": "gemini",
        "fallback_enabled": true,
        "consensus_mode": {
            "enabled": false,
            "min_ais": 2,
            "max_ais": 3,
            "comment": "AI共识模式：使用多个AI交叉验证，提升准确性"
        },
        "gemini": {
            "enabled": false,
            "api_key": "YOUR_GEMINI_API_KEY",
            "model": "gemini-2.0-flash-exp",
            "comment": "Google Gemini - 免费且强大，推荐！获取: https://aistudio.google.com/app/apikey"
        },
        "openai": {
            "enabled": false,
            "api_key": "sk-proj-...",
            "model": "gpt-4-turbo-preview",
            "organization": "",
            "comment": "OpenAI GPT-4 - 最强大，付费。获取: https://platform.openai.com/api-keys"
        },
        "claude": {
            "enabled": false,
            "api_key": "sk-ant-...",
            "model": "claude-3-opus-20240229",
            "comment": "Anthropic Claude - 安全专家，付费。获取: https://console.anthropic.com/"
        },
        "qianwen": {
            "enabled": false,
            "api_key": "sk-...",
            "model": "qwen-max",
            "comment": "阿里通义千问 - 国内快速，有免费额度。获取: https://dashscope.console.aliyun.com/"
        },
        "wenxin": {
            "enabled": false,
            "api_key": "YOUR_API_KEY",
            "secret_key": "YOUR_SECRET_KEY",
            "model": "ERNIE-Bot-4",
            "comment": "百度文心一言 - 中文优化，有免费额度。获取: https://console.bce.baidu.com/qianfan/"
        },
        "zhipu": {
            "enabled": false,
            "api_key": "YOUR_API_KEY.xxx",
            "model": "glm-4",
            "comment": "智谱GLM - 开源友好，性价比高。获取: https://open.bigmodel.cn/"
        },
        "deepseek": {
            "enabled": false,
            "api_key": "sk-...",
            "model": "deepseek-chat",
            "comment": "DeepSeek - 价格最低，代码理解强。获取: https://platform.deepseek.com/"
        },
        "kimi": {
            "enabled": false,
            "api_key": "sk-...",
            "model": "moonshot-v1-8k",
            "comment": "Kimi月之暗面 - 长文本支持。获取: https://platform.moonshot.cn/"
        },
        "xunfei": {
            "enabled": false,
            "app_id": "YOUR_APP_ID",
            "api_key": "YOUR_API_KEY",
            "api_secret": "YOUR_API_SECRET",
            "model": "generalv3.5",
            "comment": "讯飞星火 - 国产可控（当前版本暂不支持WebSocket）"
        },
        "grok": {
            "enabled": false,
            "api_key": "xai-...",
            "model": "grok-beta",
            "comment": "xAI Grok - Elon Musk的AI，强大且幽默。获取: https://x.ai/api"
        }
    },
    "notifications": {
        "email": {
            "enabled": false,
            "smtp_server": "smtp.example.com",
            "smtp_port": 587,
            "smtp_user": "your_email@example.com",
            "smtp_password": "your_password",
            "from_addr": "your_email@example.com",
            "to_addrs": ["admin@example.com"],
            "use_tls": true
        },
        "webhook": {
            "enabled": false,
            "url": "https://your-webhook-url.com/hook",
            "method": "POST",
            "headers": {
                "Content-Type": "application/json"
            }
        },
        "serverchan": {
            "enabled": false,
            "sendkey": "YOUR_SERVERCHAN_SENDKEY",
            "comment": "从 https://sct.ftqq.com/ 获取"
        },
        "bark": {
            "enabled": false,
            "server": "https://api.day.app",
            "device_key": "YOUR_BARK_KEY",
            "comment": "从Bark App获取"
        },
        "telegram": {
            "enabled": false,
            "bot_token": "YOUR_BOT_TOKEN",
            "chat_id": "YOUR_CHAT_ID",
            "comment": "从 @BotFather 创建机器人获取"
        }
    },
    "alert_rules": {
        "critical": {
            "enabled": true,
            "conditions": ["score_critical", "backdoor_found"],
            "score_threshold": 60,
            "high_risk_threshold": 50,
            "channels": ["email", "telegram", "serverchan"],
            "repeat_interval_hours": 24,
            "comment": "严重告警：评分<60或发现后门，24小时内不重复"
        },
        "warning": {
            "enabled": true,
            "conditions": ["score_warning"],
            "score_threshold": 75,
            "channels": ["serverchan"],
            "repeat_interval_hours": 72,
            "comment": "警告告警：评分<75，72小时内不重复"
        },
        "info": {
            "enabled": true,
            "conditions": ["new_version_found"],
            "channels": ["webhook"],
            "repeat_interval_hours": 168,
            "comment": "信息通知：发现新版本，一周内不重复"
        },
        "silent_hours": {
            "enabled": false,
            "start": "22:00",
            "end": "08:00",
            "comment": "静默时间：夜间不发送告警（22:00-08:00）"
        }
    }
}
